<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.verificar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VerifiCAR">
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.VerifiCAR.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".pages.CustomerPage"
            android:label="Customer's Page"
            android:theme="@style/Theme.VerifiCAR.NoActionBar" />
        <activity
            android:name=".pages.AddCarPage"
            android:label="Add Car Page"
            android:theme="@style/Theme.VerifiCAR.NoActionBar"/>
        <activity
            android:name=".pages.RegistrationPage"
            android:label="Registration Page"
            android:theme="@style/Theme.VerifiCAR.NoActionBar"/>
        <activity
            android:name=".pages.WelcomePage"
            android:label = "Welcome Page"
            android:theme="@style/Theme.VerifiCAR.NoActionBar"/>
        <activity
            android:name=".pages.SelectCarPage"
            android:label = "Select Page"
            android:theme ="@style/Theme.VerifiCAR.NoActionBar"/>
        <activity
            android:name=".pages.CarDetails"
            android:label = "Car Details"
            android:theme = "@style/Theme.VerifiCAR.NoActionBar"/>

    </application>

</manifest>